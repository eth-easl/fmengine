{
    "train_micro_batch_size_per_gpu": 1,
    "train_batch_size": 32,
    "steps_per_print": 100,
    "gradient_clipping": 1.0,
    "lr-decay-style": "cosine",
    "warmup": 0.1,
    "bf16": {
        "enabled": false
    },
    "offload_optimizer": {
        "device": "cpu",
        "nvme_path": "/scratch/xiayao",
        "pin_memory": true,
        "buffer_count": 4,
        "fast_init": false
    },
    "fp16": {
        "enabled": true,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "initial_scale_power": 12,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 5e-6,
            "betas": [
                0.9,
                0.95
            ],
            "eps": 1.0e-8
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 1e-5,
            "warmup_num_steps": 50
        }
    },
    "min_lr": 5e-7,
    "activation_checkpointing": {
        "partition_activations": false,
        "cpu_checkpointing": false,
        "contiguous_memory_optimization": false,
        "number_checkpoints": null,
        "synchronize_checkpoint_boundary": false,
        "profile": false
    },
    "wall_clock_breakdown": true,
    "flops_profiler": {
        "enabled": true,
        "profile_step": 1,
        "module_depth": -1,
        "top_modules": 1,
        "detailed": true,
        "output_file": null
    }
}